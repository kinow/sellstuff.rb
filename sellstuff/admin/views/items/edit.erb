<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to pat(:list), url(:items, :index) %></li>
      <li><%= link_to pat(:new), url(:items, :new) %></li>
      <li class="active"><%= link_to pat(:edit), url(:items, :edit, :id => @item.id) %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title"><%= pat(:edit) %> <% mt(:item) %></h2>
    <div class="inner">
      <% form_for :item, url(:items, :update, :id => @item.id), :method => :put, :class => :form do |f| %>
        <%= partial "items/form", :locals => { :f => f } %>
      <% end %>
    </div>
  </div>
</div>
<% content_for :sidebar, partial("base/sidebar") %>
