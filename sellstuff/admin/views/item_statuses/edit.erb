<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to pat(:list), url(:item_statuses, :index) %></li>
      <li><%= link_to pat(:new), url(:item_statuses, :new) %></li>
      <li class="active"><%= link_to pat(:edit), url(:item_statuses, :edit, :id => @item_status.id) %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title"><%= pat(:edit) %> <% mt(:item_status) %></h2>
    <div class="inner">
      <% form_for :item_status, url(:item_statuses, :update, :id => @item_status.id), :method => :put, :class => :form do |f| %>
        <%= partial "item_statuses/form", :locals => { :f => f } %>
      <% end %>
    </div>
  </div>
</div>
<% content_for :sidebar, partial("base/sidebar") %>
