<div class="container">
<ul class="thumbnails">
              <li class="span10">
                <div class="thumbnail">
                  <img src=<%= @item.picture.full.length == 0 ? '"http://placehold.it/640x480"' : @item.picture.full %> alt="<%= @item.title %>">
                    <div class="caption">
                    <h3><%= @item.title %> - R$<%= @item.price %></h3>
                    <p><%= @item.description %></p>
                  </div>
                </div>
              </li>
            </ul>
</div>
