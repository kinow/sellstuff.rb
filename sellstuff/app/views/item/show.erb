<div class="container">
  <style>
    .thumbnails {
      text-align:center;
    }
    .thumbnails > li {
      display: inline-block;
      *display:inline; /* ie7 fix */
      float: none; /* this is the part that makes it work */
    }
  </style>
  <div class="row">
    <ul class="thumbnails">
      <li class="span10">
        <div class="thumbnail">
          <img src=<%= if @item.picture then @item.picture.full.length == 0 ? "http://placehold.it/640x480" : @item.picture.full end %> alt="<%= @item.title %>">
          <div class="caption">
            <h3><%= @item.title %> - R$<%= @item.price %></h3>
            <p><%= @item.description %></p>
          </div>
        </div>
      </li>
    </ul>
  </div>
</div>
